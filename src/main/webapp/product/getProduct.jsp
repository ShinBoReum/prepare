		<script type="text/javascript">
		
			
			//==> 추가된부분 : "수정" "확인"  Event 연결 및 처리
			
			


			 $(function() {
				
				 if(${role=='user'}){
						
					 $( "td.ct_btn01:contains('이전')" ).on("click" , function() {
						 
						history.go(-1);
					 });
					 
					
					 $( "td.ct_btn01:contains('구매')" ).on("click" , function() {
